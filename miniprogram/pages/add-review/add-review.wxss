/* 评论 */
.review-content {
    margin: 29rpx 27rpx 0;
    padding-bottom: 26rpx;
    background: #fff;
    box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
    border-radius: 10rpx;
}

.review-input {
    width: 100%;
    height: 207rpx;
    padding: 29rpx 34rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    line-height: 40rpx;
}

.review-placeholder {
    color: rgba(29, 29, 38, 0.4);
}

.review-button {
    margin: 34rpx auto;
    width: 250rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background: #f5e069;
    border-radius: 10rpx;
    font-size: 30rpx;
    color: #34373d;
}

.review-button.disable {
    color: rgba(52, 55, 61, 0.5);
}

.opr-upload {
    display: block;
    margin-top: 29rpx;
    margin-left: 29rpx;
    width: 43rpx;
    height: 43rpx;
}